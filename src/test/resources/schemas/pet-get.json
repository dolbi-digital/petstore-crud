{
  "type": "object",
  "required": ["id", "name", "photoUrls", "status"],
  "properties": {
    "id": { "type": "integer" },
    "name": { "type": "string" },
    "status": { "type": "string", "enum": ["available", "pending", "sold"] },
    "category": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": { "type": "integer" },
        "name": { "type": "string" }
      }
    },
    "photoUrls": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" }
        }
      }
    }
  },
  "additionalProperties": true
}
